<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="sample"
            type="org.singapore.ghru.vo.request.SampleRequest" />

        <import type="org.singapore.ghru.ui.heightweight.HeightWeightHomeViewModel" />

        <variable
            name="viewModel"
            type="org.singapore.ghru.ui.heightweight.HeightWeightHomeViewModel" />

        <variable
            name="participant"
            type="org.singapore.ghru.vo.request.ParticipantRequest" />

        <variable
            name="sampleValidationError"
            type="Boolean" />

        <variable
            name="bodyMeasurementHeightValue"
            type="org.singapore.ghru.vo.request.BodyMeasurementValue" />

        <variable
            name="bodyMeasurementWeightValue"
            type="org.singapore.ghru.vo.request.BodyMeasurementValue" />

        <variable name="radioGroupCapturedValue" type="Boolean"/>
        <variable name="radioGroupManualValue" type="Boolean"/>
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        app:navGraph="@navigation/body_measurements"
        tools:context="org.singapore.ghru.BodyMeasurementsActivity"
        tools:ignore="MergeRootFrame">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/detail_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="@string/screening_height_weight"
                app:titleTextColor="@color/white" />


            <LinearLayout
                android:id="@+id/error_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/ic_error_bg"
                android:gravity="start"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="@dimen/margin_20"
                    android:contentDescription="@string/imageview"
                    app:srcCompat="@drawable/ic_icon_status_warning" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginEnd="20dp"
                    android:text="@string/error1_body_measurement"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableStart="@drawable/ic_nest_thermostat"
                    android:drawablePadding="@dimen/margin_24"
                    android:gravity="start|center_vertical"
                    android:paddingStart="@dimen/margin_24"
                    android:paddingTop="@dimen/margin_normal"
                    android:paddingBottom="@dimen/margin_normal"
                    android:text="25Â°C"
                    android:textColor="#98C645"
                    android:textSize="@dimen/default_font_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawablePadding="@dimen/margin_24"
                    android:gravity="start|center_vertical"
                    android:paddingStart="@dimen/margin_24"
                    android:paddingTop="@dimen/margin_normal"
                    android:paddingBottom="@dimen/margin_normal"
                    android:text="@string/standard_temperature"
                    android:textColor="#8F000000"
                    android:textSize="@dimen/default_font_size" />
            </LinearLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:divider="@drawable/divider"
                android:dividerPadding="@dimen/one_dp"
                android:drawableEnd="@drawable/ic_seperator"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:showDividers="none">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_margin="10dp"
                            android:contentDescription="@string/imageview"
                            app:srcCompat="@drawable/icon_user" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/roboto"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            />

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="30dp"
                            android:contentDescription="@string/imageview"
                            app:srcCompat="@drawable/gray_ellipse" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/roboto"
                            android:text="@{participant.gender}"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="30dp"
                            android:contentDescription="@string/imageview"
                            app:srcCompat="@drawable/gray_ellipse" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/roboto"
                            android:text="@{participant.age.ageInYears.toString() +'Y' }"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="30dp"
                            android:contentDescription="@string/imageview"
                            app:srcCompat="@drawable/gray_ellipse" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/roboto"
                            android:text="@{participant.screeningId }"
                            android:textColor="@color/black"
                            android:textSize="20sp" />


                    </LinearLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

<!--                new view for height and weight -->

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_seperator" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="start"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_32">

                    <TextView
                        android:id="@+id/textViewManual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="@string/skin_manual_question"
                        android:textSize="@dimen/default_font_size"
                        android:layout_marginStart="@dimen/margin_20"/>

                    <RadioGroup
                        android:id="@+id/radioGroupManual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_24"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/yesManual"
                            android:layout_width="@dimen/height_260"
                            android:layout_height="56dp"
                            android:layout_marginEnd="@dimen/margin_normal"
                            android:background="@drawable/radio_button_selector"
                            android:button="@android:color/transparent"
                            android:gravity="center"
                            android:text="@string/app_yes"
                            android:textSize="20sp" />

                        <RadioButton
                            android:id="@+id/noManual"
                            android:layout_width="@dimen/height_260"
                            android:layout_height="56dp"
                            android:background="@drawable/radio_button_selector"
                            android:button="@android:color/transparent"
                            android:gravity="center"
                            android:text="@string/app_no"
                            android:textSize="20sp" />

                    </RadioGroup>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        visibleGone="@{ radioGroupManualValue }"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_24"
                        android:background="@color/error_banner_color"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/textView19ss2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/roboto"
                            android:text="@string/app_error_yes_or_no"
                            android:textColor="#DE000000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/buttonBackToHomeFive"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/capturedLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="start"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_32">

                    <TextView
                        android:id="@+id/textViewUnaidedCaptured"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="@string/height_captured"
                        android:textSize="@dimen/default_font_size"
                        android:layout_marginStart="@dimen/margin_20"/>

                    <RadioGroup
                        android:id="@+id/radioGroupCaptured"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_24"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/yesCaptured"
                            android:layout_width="@dimen/height_260"
                            android:layout_height="56dp"
                            android:layout_marginEnd="@dimen/margin_normal"
                            android:background="@drawable/radio_button_selector"
                            android:button="@android:color/transparent"
                            android:gravity="center"
                            android:text="@string/app_yes"
                            android:textSize="20sp" />

                        <RadioButton
                            android:id="@+id/noCaptured"
                            android:layout_width="@dimen/height_260"
                            android:layout_height="56dp"
                            android:background="@drawable/radio_button_selector"
                            android:button="@android:color/transparent"
                            android:gravity="center"
                            android:text="@string/app_no"
                            android:textSize="20sp" />

                    </RadioGroup>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        visibleGone="@{ radioGroupCapturedValue }"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_24"
                        android:background="@color/error_banner_color"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/textView19ss"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/roboto"
                            android:text="@string/app_error_yes_or_no"
                            android:textColor="#DE000000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/buttonBackToHomeFive"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:id="@+id/contactRelationshipTextLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:layout_marginStart="@dimen/margin_20"
                        android:layout_marginEnd="@dimen/margin_32"
                        android:background="@drawable/ic_input_field_text"
                        android:gravity="start"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/margin_normal"
                        android:paddingTop="14dp"
                        android:paddingEnd="@dimen/margin_normal"
                        android:textAlignment="viewStart"
                        android:textColorHint="@color/enum_hint_color"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/margin_24">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:text="@string/device_id"
                            android:textSize="15sp" />

                        <Spinner
                            android:id="@+id/deviceIdSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="-9dp"
                            android:layout_marginTop="-12dp"
                            android:background="@color/transparent"
                            android:gravity="center_vertical|start"
                            android:singleLine="true"
                            android:spinnerMode="dropdown"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textColorHint="@color/dark_gray"
                            android:textSize="@dimen/default_font_size"
                            android:translationY="3dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/buttonReadings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_button_fill_primary"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:text="@string/readings"
                            android:textSize="@dimen/margin_normal"
                            android:textColor="@color/white"
                            android:layout_marginTop="@dimen/margin_20"
                            android:layout_marginEnd="@dimen/margin_20"
                            android:textAllCaps="false"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/obDateLabel"
                            android:text="@string/bp_ob_label"
                            android:visibility="gone"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/obDateTextView"
                            android:visibility="gone"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView_device_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="@string/select_device"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:layout_marginStart="@dimen/margin_32"
                    android:layout_marginTop="@dimen/margin_10"
                    android:visibility="gone"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_seperator"
                    android:layout_marginTop="@dimen/margin_10"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/heightLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/heightTextLayout"
                        android:layout_width="@dimen/margin_200"
                        android:layout_height="@dimen/bp_text_width"
                        android:layout_marginTop="@dimen/margin_20"
                        android:layout_marginBottom="@dimen/margin_20"
                        android:layout_marginStart="@dimen/margin_24"
                        android:background="@drawable/ic_input_field_text"
                        android:gravity="start"
                        android:paddingStart="@dimen/margin_normal"
                        android:paddingTop="14dp"
                        android:paddingEnd="@dimen/margin_normal"
                        android:textAlignment="viewStart"
                        android:textColorHint="@color/enum_hint_color">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/heightEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:background="@color/transparent"
                            android:gravity="center_vertical|start"
                            android:hint="@string/bp_height"
                            android:inputType="numberDecimal"
                            android:text="@={bodyMeasurementHeightValue.value}"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="@dimen/default_font_size"
                            android:translationY="3dp"
                            app:validateEmpty="@{true}"
                            app:validateRegex='@{"^(?!\\s)^([a-zA-Z0-9 !-~]){1,}$"}'/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:text="@string/bp_units_cm"
                        android:textSize="20sp" />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="@dimen/margin_24"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:background="@drawable/ic_comment_background"
                    android:gravity="top|start"
                    android:hint="@string/comments_notes_optional"
                    android:inputType="textCapWords|textCapSentences|textPersonName"
                    android:padding="24dp"
                    android:text="@={bodyMeasurementHeightValue.comment}"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textColorHint="@color/enum_hint_color"
                    android:textSize="@dimen/default_font_size"
                    android:visibility="gone"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_seperator"
                    android:layout_marginTop="@dimen/margin_20"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/weightLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_10">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/weightTextLayout"
                        android:layout_width="@dimen/margin_200"
                        android:layout_height="@dimen/bp_text_width"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:layout_marginStart="@dimen/margin_24"
                        android:background="@drawable/ic_input_field_text"
                        android:gravity="start"
                        android:paddingStart="@dimen/margin_normal"
                        android:paddingTop="14dp"
                        android:paddingEnd="@dimen/margin_normal"
                        android:textAlignment="viewStart"
                        android:textColorHint="@color/enum_hint_color">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/weightEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:background="@color/transparent"
                            android:gravity="center_vertical|start"
                            android:hint="@string/weight_text"
                            android:inputType="numberDecimal"
                            android:text="@={bodyMeasurementWeightValue.value}"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="@dimen/default_font_size"
                            android:translationY="3dp"
                            app:validateEmpty="@{true}"
                            app:validateRegex='@{"^(?!\\s)^([a-zA-Z0-9 !-~]){1,}$"}'/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:text="@string/bp_units_kg"
                        android:textSize="20sp" />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/weight_comment"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="@dimen/margin_24"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:background="@drawable/ic_comment_background"
                    android:gravity="top|start"
                    android:hint="@string/comments_notes_optional"
                    android:inputType="textCapWords|textCapSentences|textPersonName"
                    android:padding="24dp"
                    android:text="@={bodyMeasurementWeightValue.comment}"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textColorHint="@color/enum_hint_color"
                    android:textSize="@dimen/default_font_size" />

<!--                end of new view -->


                <LinearLayout
                    android:id="@+id/linearLayoutWeight"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/weightTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_icon_height"
                        android:drawablePadding="@dimen/margin_24"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="start|center_vertical"
                        android:paddingStart="@dimen/margin_24"
                        android:paddingTop="@dimen/margin_normal"
                        android:paddingBottom="@dimen/margin_normal"
                        android:text="@string/bp_height"
                        android:textColor="#DE000000"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:id="@+id/linearLayoutWeightx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:gravity="center_vertical|end">

                        <TextView
                            android:id="@+id/heightCompleteView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_normal"
                            android:background="@drawable/ic_success_sample"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:text="@string/complete"
                            android:textColor="@color/white"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/heightSkippedView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_normal"
                            android:background="@drawable/ic_skiped"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:text="Skipped"
                            android:textColor="@color/white"
                            android:visibility="gone" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_20"
                            app:srcCompat="@drawable/ic_icon_arrow_front" />


                    </LinearLayout>

                </LinearLayout>


<!--                <androidx.appcompat.widget.LinearLayoutCompat-->
