<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="participant"
            type="org.singapore.ghru.vo.request.ParticipantRequest" />

        <import type="org.singapore.ghru.ui.treadmill.contraindications.TreadmillContraViewModel" />

        <variable
            name="viewModel"
            type="org.singapore.ghru.ui.treadmill.contraindications.TreadmillContraViewModel" />


        <variable
            name="resource"
            type="org.singapore.ghru.vo.Resource" />

        <variable
            name="retryCallback"
            type="org.singapore.ghru.ui.common.RetryCallback" />

        <variable name="radioGroupBloodPressureValue" type="Boolean"/>
        <variable name="radioGroupMedicalValue" type="Boolean"/>
        <variable name="radioGroupChestPainValue" type="Boolean"/>
        <variable name="radioGroupDiabetesValue" type="Boolean"/>
        <variable name="radioGroupOxygenValue" type="Boolean"/>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:navGraph="@navigation/treadmill"
        tools:context="org.singapore.ghru.TreadmillActivity"
        tools:ignore="MergeRootFrame">

        <com.google.android.material.appbar.AppBarLayout
